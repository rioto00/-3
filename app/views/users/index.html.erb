<div class = "container px-5 px-sm-0">
  <div class ="row">
    <%= render 'books/list', book: @book, user: @user %>
    
    <div class = "col-md-8 offset-md-1">
      <h2>Users</h2>
      
      <table class = "table">
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        
        <% @users.each do |user| %>
        
        <tr>
          <td>
          <%= image_tag(user.get_profile_image, height: 80, width: 80) %>
          </td>
          <td><%= user.name %></td>
          <td>フォロー数: <%= user.followings.count %></td>
          <td>フォロワー数: <%= user.followers.count %></td>
          <td><%= render "relationships/relationships", user: user, options: { class: "follow-link" } %></td>
          <td><%= link_to "Show", user_path(user.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

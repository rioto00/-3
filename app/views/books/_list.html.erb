    <div class = "col-md-3">
      <h2>User info</h2>
        <%= image_tag(user.get_profile_image, height: 100, width: 100) %>
        <table class = "table" >
          <tr>
            <th>name </th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th> 
            <th><%= user.introduction %></th>
          </tr>
          <tr>
            <th>follows</th>
            <th><%= link_to user.followings.count, user_followings_path(user) %></th>
          </tr>
          <tr>
            <th>followers</th>
            <th><%= link_to user.followers.count, user_followers_path(user) %></th>
          </tr>
        </table>
        
        <div class="row">
          <% if current_user != user %>
            <td><%= render "relationships/relationships", user: user, options: { class: ""} %></td>
          <% else %>
            <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
            <% end %>
          <% end %>
        </div>
      
        <!--<div class="row">-->
           <!--<%= link_to edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block' do %>-->
             <!--<i class="fa-solid fa-user-gear text-muted"></i>-->
           <!--<% end %>-->
        <!--</div>-->
      
      <h2 class = "mt-3">New book</h2>
      <form action = "/books" accept-charset = "UTF-8" method = "post">
        <%= form_with model: book do |f| %>
        <div class = "form-group">
          <p>title</p>
          <%= f.text_field :title, class: 'form-control mb-3' %>
        </div>
        <div class = "form-group">
          <p>Opinion</p>
          <%= f.text_area :body, class: 'form-control-file mb-3' %>
        </div>
        <div class = "form-group">
          <input type = "submit" name = "commit" value = "Create Book" class = "btn btn-success" data-disable-with = "Create Book">
        </div>
      </form>
      <% end %>
    </div>
    

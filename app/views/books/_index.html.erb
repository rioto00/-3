<table class = "table">
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th></th>
    <th></th>
  </tr>
  
  <% books.each do |book| %>
  <tr>
    <td><%= link_to image_tag(book.user.get_profile_image, height: 80, width: 80), user_path(book.user.id) %></td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
    <td id="favorite_btn_<%= book.id %>">
    <td><%= render "favorites/favorite", book: book %></td>
    <td>コメント数： <%= book.book_comments.count %></td>
  </tr>
  <% end %>
  
</table>